<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraintLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    tools:layout_editor_absoluteY="81dp">

    <ImageView
        android:id="@+id/viewblue"
        android:layout_width="833dp"
        android:layout_height="match_parent"
        android:contentDescription="background"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.469"
        app:layout_constraintStart_toStartOf="parent"
        app:srcCompat="@drawable/blueview" />

    <Button
        android:id="@+id/buttonEvaluate"
        android:layout_width="153dp"
        android:layout_height="60dp"
        android:layout_marginStart="32dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="casual"
        android:text="@string/evaluate"
        android:textColor="@color/lightblue"
        android:textStyle="bold"
        app:backgroundTint="@color/darkblue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/wishSong"
        android:layout_width="152dp"
        android:layout_height="60dp"
        android:layout_marginBottom="24dp"
        android:fontFamily="casual"
        android:text="@string/wishSong"
        android:textColor="@color/lightblue"
        android:textStyle="bold"
        app:backgroundTint="@color/darkblue"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.617"
        app:layout_constraintStart_toEndOf="@+id/buttonEvaluate" />

    <ImageView
        android:id="@+id/album"
        android:layout_width="234dp"
        android:layout_height="209dp"
        android:layout_marginTop="24dp"
        android:layout_marginEnd="88dp"
        android:contentDescription="@string/descAlbum"
        android:cropToPadding="true"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/album" />

    <ImageView
        android:id="@+id/playbutton"
        android:layout_width="158dp"
        android:layout_height="145dp"
        android:layout_marginTop="48dp"
        android:layout_marginEnd="120dp"
        android:contentDescription="@string/descPlaybutton"
        android:focusable="auto"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/songOutput"
        app:srcCompat="@drawable/playbutton2" />

    <Button
        android:id="@+id/playbuttoninvisible"
        android:layout_width="156dp"
        android:layout_height="149dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="120dp"
        android:background="#00FFFFFF"
        android:text="@string/playbuttoninvisible"
        android:visibility="visible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/songOutput"
        tools:ignore="SpeakableTextPresentCheck" />

    <Button
        android:id="@+id/playbuttoninvisible2"
        android:layout_width="156dp"
        android:layout_height="149dp"
        android:layout_marginTop="44dp"
        android:layout_marginEnd="120dp"
        android:background="@color/transparent"
        android:text="@string/playbuttoninvisible"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/songOutput" />

    <TextView
        android:id="@+id/songOutput"
        android:layout_width="381dp"
        android:layout_height="30dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:gravity="center"
        android:textColor="#8CFFF5"
        android:textSize="16sp"
        android:textStyle="italic"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/album" />

    <ImageButton
        android:id="@+id/infobutton"
        android:layout_width="55dp"
        android:layout_height="53dp"
        android:layout_marginStart="294dp"
        android:layout_marginTop="192dp"
        android:layout_marginEnd="16dp"
        android:background="#00FFFFFF"
        android:contentDescription="@string/information"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="@+id/album"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/info"
        app:tint="#8DF6FA"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageView
        android:id="@+id/blueInfobox"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="4dp"
        android:visibility="invisible"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/blueinfobox" />

    <TextView
        android:id="@+id/infobox"
        android:layout_width="261dp"
        android:layout_height="235dp"
        android:layout_marginTop="12dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/infoText"
        android:layout_width="233dp"
        android:layout_height="216dp"
        android:layout_marginStart="115dp"
        android:layout_marginTop="12dp"
        android:layout_marginEnd="296dp"
        android:fontFamily="serif-monospace"
        android:textColor="@color/betweenblue"
        android:textSize="16sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="@+id/blueInfobox"
        app:layout_constraintHorizontal_bias="0.103"
        app:layout_constraintStart_toStartOf="@+id/blueInfobox"
        app:layout_constraintTop_toTopOf="@+id/blueInfobox" />


</androidx.constraintlayout.widget.ConstraintLayout>